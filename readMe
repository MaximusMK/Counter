    text-align: center;
    font-size: 6em;
    font-weight: 700;

    text-shadow: -2px -1px 1px #999;
}
.button-container {
    text-align: center;
}
.btn {
    height: 80px;
    width: 150px;
    margin: 10px;
    font-size: 2em;
    border: 0;
    border-radius: 20px;

    box-shadow: -5px -5px 3px #555;
}

